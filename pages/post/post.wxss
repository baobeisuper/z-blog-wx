/* pages/post/post.wxss */
@import "../../wxParse/wxParse.wxss";

.post-title {
  font-size: 38rpx;
  font-weight: 400;
  margin-bottom: 24rpx;
}

.post-info {
  width: 100%;
  font-size: 24rpx;
  margin: 10rpx 0 0 0;
  color: #8a8a8a;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal !important;
}

.badge-a {
  display: inline-block;
  font-size: 0.75rem;
  color: #00965e;
  padding: 0 12rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 6rpx;
  background-color: rgba(0, 150, 94, 0.1);
  text-decoration: none;
  margin: 8rpx;
}

.badge-a:hover {
  color: #004a2e;
  background-color: rgba(0, 150, 94, 0.2);
}

.text-secondary {
    font-size: 24rpx;
    color: #6c757d;
}
