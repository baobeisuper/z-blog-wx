.search-box {
  width: 100%;
  background: #fff;
  height: 72rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}

.search-bar {
  width: 100%;
  height: 72rpx;
  display: flex;
  align-items: center;
  border-radius: 36rpx;
  background: #f5f5f5;
}

.search-bar icon {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.search-bar input {
  height: 72rpx;
  line-height: 72rpx;
  font-size: 24rpx;
  width: 100%;
  color: #8a8a8a;
}



.search-em {
  font-style: normal;
  color: red
}