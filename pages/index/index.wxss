/**index.wxss**/

.search-box {
  width: 100%;
  background: white;
  height: 72rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}

.search-bar {
  width: 100%;
  height: 72rpx;
  display: flex;
  align-items: center;
  border-radius: 36rpx;
  background: #f5f5f5;
}

.search-bar icon {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.search-bar input {
  height: 72rpx;
  line-height: 72rpx;
  font-size: 24rpx;
  width: 100%;
  color: #8a8a8a;
}

.tab{
	display: flex;
	flex-direction: column;
}
.tab-nav{
  font-size:24rpx;
	height: 80rpx;
	border-bottom: 0.5rpx dotted #ddd;
	display: flex;
	line-height: 79rpx;
	position: relative;
}
 
.tab-line{
	position: absolute;
	left: 0;
	bottom: -1rpx;
	height: 4rpx;
	background: #4CAF50;
	transition: all 0.3s;
}