.wxParse-thead {
  display: table-header-group;
}

.wxParse-tbody {
  display: table-row-group;
}

.wxParse-th {
  text-align: center;
  font-weight: bold;
  background: #f0f0f0;
}

.wxParse-th, .wxParse-td {
  display: table-cell;
  padding: 5px;
  font-size: 28rpx;
  border-left: 1px solid #e0e0e0;
  word-break: break-all;
  white-space: nowrap;
  border-bottom: 1px solid #e0e0e0;
}

